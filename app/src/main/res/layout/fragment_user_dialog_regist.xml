<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingEnd="30dp"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/user_regist_backicon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_times"
            android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_rg_title"
            android:gravity="center_vertical|end"
            android:textSize="27sp"
            android:fontFamily="@font/mplus_black"
            android:textColor="@color/user_rg"
            android:textFontWeight="800"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_rg_position"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"/>
        <Spinner
            android:id="@+id/user_regist_spinner"
            android:layout_width="match_parent"
            android:background="@drawable/border_outline_spinner_1"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:paddingStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_rg_username"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mn_regist_username_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/border_outline"
            android:drawableLeft="@drawable/ic_user_user"
            android:drawablePadding="20dp"
            android:hint="@string/user_rg_username"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:textColorHint="@color/user_rg"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_rg_password"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mn_regist_password_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/border_outline"
            android:drawableLeft="@drawable/ic_user_lock"
            android:drawablePadding="20dp"
            android:hint="@string/user_rg_password"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:textColorHint="@color/user_rg"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_rg_email"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mn_regist_email_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/border_outline"
            android:drawableLeft="@drawable/ic_user_email"
            android:drawablePadding="20dp"
            android:hint="@string/user_rg_email"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:textColorHint="@color/user_rg"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mn_regist_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/intro_round_corner"
            android:backgroundTint="@color/user_rg"
            android:drawableLeft="@drawable/ic_exam_check"
            android:drawablePadding="-50dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="70dp"
            android:text="@string/user_rg_done"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>