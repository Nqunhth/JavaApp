<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragment.home.MainHome"
    android:background="@color/sunrise_3">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/sunrise_2">
        <fragment
            android:id="@+id/home_slider"
            android:name="com.example.myapp.controller.fragment.imageSlider.AutoSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_auto_slider"
            android:layout_gravity="top|center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="75dp"/>
        <fragment
            android:id="@+id/home_ad"
            android:name="com.example.myapp.controller.fragment.advertise.Achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_ad_achievement"
            android:layout_gravity="top|center"
            android:layout_marginTop="5dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/home_ad_whyus"
                android:name="com.example.myapp.controller.fragment.advertise.Whyus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_ad_whyus"
                android:layout_marginTop="5dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="147dp"
                android:background="@android:color/transparent">

<!--                <com.google.android.material.button.MaterialButton-->
