<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/achie_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/border_layout">

        <TextView
            android:id="@+id/ad_data_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:text=""
            android:textFontWeight="700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textColor="@color/textcolor_1"
            />

        <TextView
            android:id="@+id/ad_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/ad_type_1"
            android:textFontWeight="400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_data_1"
            android:textAlignment="center"
            android:textColor="@color/textcolor_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/achie_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/border_layout"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/ad_data_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:text=""
            android:textFontWeight="700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textColor="@color/textcolor_1"/>

        <TextView
            android:id="@+id/ad_type_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/ad_type_2"
            android:textFontWeight="400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_data_2"
            android:textAlignment="center"
            android:textColor="@color/textcolor_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/achie_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/border_layout"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/ad_data_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:text=""
            android:textFontWeight="700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textColor="@color/textcolor_1"/>

        <TextView
            android:id="@+id/ad_type_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/ad_type_3"
            android:textFontWeight="400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_data_3"
            android:textAlignment="center"
            android:textColor="@color/textcolor_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>