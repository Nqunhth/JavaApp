<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.fragment.courses.MainCourses"
    android:background="@color/course_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_title_1"
            android:textColor="@color/course_title"
            android:textSize="18sp"
            android:fontFamily="@font/mplus_bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="80dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_title_2"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:fontFamily="@font/mplus_bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textFontWeight="800"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/course_card_shadow"
            android:paddingBottom="3dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/course_card_1"
                android:layout_width="340dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/course_card1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundCardImageView" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/sunrise_1"
                android:text="@string/course_bestseller"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/course_card_1"
                app:layout_constraintTop_toTopOf="@+id/course_card_1"
                app:shapeAppearanceOverlay="@style/ArrowShapeAppearance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/mplus_bold"
                android:text="@string/course_card_1"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/course_card_1"
                app:layout_constraintTop_toTopOf="@+id/course_card_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/mplus_regular"
                android:text="@string/course_more"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/course_card_1"
                app:layout_constraintEnd_toEndOf="@+id/course_card_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/course_card_shadow"
                android:paddingBottom="3dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/course_card_2"
                    android:layout_width="165dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/course_card2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/roundCardImageView" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/mplus_bold"
                    android:text="@string/course_card_2"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/course_card_2"
                    app:layout_constraintTop_toTopOf="@+id/course_card_2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/mplus_regular"
                    android:text="@string/course_more"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/course_card_2"
                    app:layout_constraintEnd_toEndOf="@+id/course_card_2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/course_card_shadow"
                android:paddingBottom="3dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/course_card_3"
                    android:layout_width="165dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/course_card4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/roundCardImageView" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/mplus_bold"
                    android:text="@string/course_card_3"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/course_card_3"
                    app:layout_constraintTop_toTopOf="@+id/course_card_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/mplus_regular"
                    android:text="@string/course_more"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/course_card_3"
                    app:layout_constraintEnd_toEndOf="@+id/course_card_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>



    </LinearLayout>




</FrameLayout>