<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        app:borderWidth="2dp"
        app:backgroundTint="@color/meow_shadowColor"
        app:tint="@color/sunrise_1"
        android:src="@drawable/ic_robot"
        app:maxImageSize="40dp"
        app:fabCustomSize="60dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:id="@+id/chatView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/adapter_message_one"
            app:stackFromEnd="true"
            tools:itemCount="2"
            android:background="@color/white"/>
        <HorizontalScrollView
            android:id="@+id/bot_suggest_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:visibility="invisible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:paddingTop="5dp">
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <com.google.android.material.chip.Chip
                        android:id="@+id/bot_suggest_chip1"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:textAlignment="center"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:visibility="gone"
                        android:backgroundTint="@color/intro_teacher"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/bot_suggest_chip2"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="8dp"
                        android:checkable="true"
                        android:textAlignment="center"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:visibility="gone"
                        android:backgroundTint="@color/intro_teacher"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/bot_suggest_chip3"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="8dp"
                        android:checkable="true"
                        android:textAlignment="center"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:visibility="gone"
                        android:backgroundTint="@color/intro_teacher"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/bot_suggest_chip4"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="8dp"
                        android:checkable="true"
                        android:textAlignment="center"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:visibility="gone"
                        android:backgroundTint="@color/intro_teacher"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/bot_suggest_chip5"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="8dp"
                        android:checkable="true"
                        android:textAlignment="center"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:visibility="gone"
                        android:backgroundTint="@color/intro_teacher"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp">
            <EditText
                android:id="@+id/editMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="@string/bot_hint"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:background="@drawable/bg_text_input"
                android:paddingStart="20dp"/>
            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_send"
                android:background="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>





</LinearLayout>