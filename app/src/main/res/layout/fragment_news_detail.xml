<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:paddingStart="20dp"
        android:paddingEnd="30dp">
        <ImageView
            android:id="@+id/news_detail_backicon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/news_detail_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/news_detail_title_1"
            android:gravity="center_vertical|end"
            android:textSize="20sp"
            android:fontFamily="@font/mplus_black"
            android:textColor="@color/news_detail_title"
            android:textFontWeight="800"/>
        <TextView
            android:id="@+id/news_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news_detail_title_2"
            android:layout_gravity="end"
            android:textSize="20sp"
            android:fontFamily="@font/mplus_black"
            android:textColor="@color/news_detail_title"
            android:textFontWeight="800"
            android:layout_marginStart="10dp"
            android:visibility="gone"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/news_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/news_detail_title_post"
            android:fontFamily="@font/mplus_black"
            android:textSize="30sp"
            android:textFontWeight="900"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/news_detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news_detail_author"
                android:textSize="20sp"
                android:fontFamily="@font/mplus_black"
                android:textColor="@color/news_detail_title"
                android:textFontWeight="800"/>
            <TextView
                android:id="@+id/news_detail_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news_detail_location"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:fontFamily="@font/mplus_black"
                android:textColor="@color/news_detail_title"
                android:textFontWeight="800"
                android:layout_marginStart="20dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/news_detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/news_detail_placeholder"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/news_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:justificationMode="inter_word"
                android:overScrollMode="always"
                android:scrollbars="vertical"
                android:text="@string/news_detail_content"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>